---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdPlacement from '../components/AdPlacement.astro';
---

<Layout 
  title="Advertise with Threda - Reach Engaged Readers"
  description="Partner with Threda to reach thousands of engaged readers interested in technology, business, lifestyle, and innovation."
>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-cream-50 to-primary-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
          Advertise with Threda
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 mb-8">
          Reach thousands of engaged readers interested in trending insights across technology, business, and innovation.
        </p>
        <a 
          href="/contact" 
          class="inline-flex items-center px-8 py-4 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300"
        >
          Get Started Today
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </section>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Audience Stats -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white text-center mb-12">Our Audience</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">50K+</h3>
            <p class="text-slate-600 dark:text-slate-400">Monthly Readers</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">200K+</h3>
            <p class="text-slate-600 dark:text-slate-400">Page Views/Month</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">4.5min</h3>
            <p class="text-slate-600 dark:text-slate-400">Avg. Session Time</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">85%</h3>
            <p class="text-slate-600 dark:text-slate-400">Engagement Rate</p>
          </div>
        </div>
      </section>

      <!-- Ad Placement Options -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white text-center mb-12">Advertisement Placements</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-cream-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Header Banner</h3>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              Prime real estate at the top of every page. Maximum visibility for your brand.
            </p>
            <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400 mb-6">
              <li>• 728x90 or 970x250 pixels</li>
              <li>• Above-the-fold placement</li>
              <li>• High click-through rates</li>
              <li>• Mobile responsive</li>
            </ul>
            <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">$500/month</div>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-cream-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Sidebar Ads</h3>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              Persistent visibility throughout the user's browsing session.
            </p>
            <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400 mb-6">
              <li>• 300x250 or 300x600 pixels</li>
              <li>• Sticky positioning available</li>
              <li>• High engagement rates</li>
              <li>• Multiple positions available</li>
            </ul>
            <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">$300/month</div>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-cream-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">In-Article Ads</h3>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              Native placement within article content for maximum engagement.
            </p>
            <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400 mb-6">
              <li>• 728x90 or native format</li>
              <li>• Contextual placement</li>
              <li>• High reader attention</li>
              <li>• Non-intrusive design</li>
            </ul>
            <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">$400/month</div>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-cream-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Sponsored Content</h3>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              Native articles that provide value while promoting your brand.
            </p>
            <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400 mb-6">
              <li>• Full article placement</li>
              <li>• Editorial oversight</li>
              <li>• Social media promotion</li>
              <li>• Long-term visibility</li>
            </ul>
            <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">$800/article</div>
          </div>
        </div>
      </section>

      <!-- Sample Ad Placement -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white text-center mb-8">See Our Ad Placements in Action</h2>
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Header Banner Example:</h3>
            <AdPlacement position="advertise-demo-header" />
          </div>
          
          <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <div class="lg:col-span-3">
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">In-Content Ad Example:</h3>
              <AdPlacement position="advertise-demo-content" />
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Sidebar Example:</h3>
              <AdPlacement position="advertise-demo-sidebar" />
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="bg-gradient-to-r from-primary-600 to-primary-800 rounded-3xl p-8 lg:p-12 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Reach Our Audience?</h2>
        <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
          Join leading brands who trust Threda to connect with engaged, professional readers.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="inline-flex items-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-xl hover:bg-primary-50 transition-colors duration-200"
          >
            Start Advertising
          </a>
          <a 
            href="mailto:ads@threda.com" 
            class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-primary-700 transition-colors duration-200"
          >
            Contact Sales Team
          </a>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>