---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import { dummyPosts, dummyCategories } from '../lib/dummyData';

// Use dummy data for now - replace with Supabase queries when ready
const posts = dummyPosts;
const categories = dummyCategories;

// Sort posts by trending score and date
const trendingPosts = posts
  .filter(post => post.trending_score > 70)
  .sort((a, b) => b.trending_score - a.trending_score)
  .slice(0, 3);

const featuredPost = posts[0];
const recentPosts = posts.slice(1, 7);
---

<Layout title="Threda - Trending Insights & Expert Analysis">
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-luxury-50 via-cream-50 to-luxury-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 py-20 lg:py-32 overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 opacity-10 dark:opacity-5">
        <div class="absolute top-20 left-10 w-72 h-72 bg-luxury-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse-slow"></div>
        <div class="absolute top-40 right-10 w-72 h-72 bg-luxury-600 rounded-full mix-blend-multiply filter blur-xl animate-pulse-slow" style="animation-delay: 1s;"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-luxury-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="mb-8">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-luxury-100 dark:bg-luxury-900/30 text-luxury-800 dark:text-luxury-300 border border-luxury-200 dark:border-luxury-800">
              <span class="w-2 h-2 bg-luxury-500 rounded-full mr-2 animate-pulse"></span>
              Live Trending Insights
            </span>
          </div>
          
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-8 bg-gradient-to-r from-slate-900 via-luxury-800 to-slate-900 dark:from-white dark:via-luxury-300 dark:to-white bg-clip-text text-transparent leading-tight">
            Stay Ahead of
            <span class="block bg-gradient-to-r from-luxury-600 to-luxury-800 dark:from-luxury-400 dark:to-luxury-600 bg-clip-text text-transparent">
              The Curve
            </span>
          </h1>
          
          <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-300 mb-12 max-w-4xl mx-auto leading-relaxed">
            Your premier destination for trending insights across technology, business, lifestyle, and innovation. 
            Expert analysis meets cutting-edge content.
          </p>
          
          <div class="flex flex-wrap justify-center gap-4 mb-12">
            {categories.slice(0, 4).map((category) => (
              <a 
                href={`/category/${category.slug}`}
                class="group px-6 py-3 bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm rounded-full border border-cream-200 dark:border-slate-700 hover:border-luxury-300 dark:hover:border-luxury-600 transition-all duration-300 hover:shadow-lg hover:scale-105"
              >
                <span class="text-slate-700 dark:text-slate-300 group-hover:text-luxury-600 dark:group-hover:text-luxury-400 font-medium">
                  {category.name}
                </span>
              </a>
            ))}
          </div>
          
          <div class="flex justify-center">
            <a 
              href="#latest" 
              class="inline-flex items-center px-8 py-4 bg-luxury-600 hover:bg-luxury-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 group"
            >
              Explore Latest Insights
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Trending Section -->
      {trendingPosts.length > 0 && (
        <section class="mb-20" id="trending">
          <div class="flex items-center justify-between mb-12">
            <div class="flex items-center">
              <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-orange-500 rounded-xl flex items-center justify-center">
                  <span class="text-2xl">ðŸ”¥</span>
                </div>
                <div>
                  <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 dark:text-white">Trending Now</h2>
                  <p class="text-slate-600 dark:text-slate-400">Most popular stories this week</p>
                </div>
              </div>
            </div>
            <div class="hidden md:flex items-center space-x-2 text-sm text-slate-500 dark:text-slate-400">
              <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
              <span>Live updates</span>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {trendingPosts.map((post, index) => (
              <div class="animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
                <PostCard post={post} />
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Latest Posts Section -->
      <section id="latest">
        <div class="flex items-center justify-between mb-12">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 dark:text-white mb-2">Latest Insights</h2>
            <p class="text-slate-600 dark:text-slate-400">Fresh perspectives on what matters most</p>
          </div>
          <a 
            href="/all-posts" 
            class="hidden md:inline-flex items-center text-luxury-600 dark:text-luxury-400 hover:text-luxury-700 dark:hover:text-luxury-300 font-medium transition-colors duration-200 group"
          >
            View all posts
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        {posts && posts.length > 0 ? (
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Featured Post -->
            <div class="lg:col-span-8">
              <PostCard post={featuredPost} variant="hero" />
            </div>
            
            <!-- Sidebar Posts -->
            <div class="lg:col-span-4 space-y-6">
              {recentPosts.slice(0, 4).map((post, index) => (
                <div class="animate-slide-up" style={`animation-delay: ${(index + 1) * 0.1}s`}>
                  <PostCard post={post} variant="compact" />
                </div>
              ))}
            </div>
          </div>
        ) : (
          <div class="text-center py-20">
            <div class="w-24 h-24 bg-luxury-100 dark:bg-luxury-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-12 h-12 text-luxury-600 dark:text-luxury-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">Content Coming Soon</h3>
            <p class="text-slate-600 dark:text-slate-400 max-w-md mx-auto">
              Our content automation system is preparing fresh insights for you. Check back soon for the latest trending stories.
            </p>
          </div>
        )}
      </section>

      <!-- Newsletter Section -->
      <section class="mt-20 bg-gradient-to-r from-luxury-600 to-luxury-800 rounded-3xl p-8 lg:p-12 text-white">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4">Never Miss a Trend</h2>
          <p class="text-xl text-luxury-100 mb-8">
            Get the latest insights delivered straight to your inbox. Join thousands of readers staying ahead of the curve.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="flex-1 px-6 py-4 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-luxury-300"
            />
            <button class="px-8 py-4 bg-white text-luxury-700 font-semibold rounded-xl hover:bg-luxury-50 transition-colors duration-200">
              Subscribe
            </button>
          </div>
          <p class="text-sm text-luxury-200 mt-4">
            No spam, unsubscribe at any time.
          </p>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>