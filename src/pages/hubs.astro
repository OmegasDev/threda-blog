---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { dummyHubs, getTrendingHubs } from '../lib/dummyData';

const allHubs = getTrendingHubs();
---

<Layout 
  title="Explore Hubs - Threda"
  description="Discover all the communities and topics on Threda. Find your niche and stay in the loop."
>
  <Header />
  
  <main class="min-h-screen bg-slate-50 dark:bg-slate-900">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-primary-100 dark:from-slate-800 dark:via-slate-900 dark:to-slate-800 py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
          Explore Hubs
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 mb-8">
          Discover communities and topics that matter to you. Each hub is a specialized space for news and discussions.
        </p>
        <div class="bg-primary-100 dark:bg-primary-900/30 rounded-2xl p-6 max-w-2xl mx-auto">
          <p class="text-primary-800 dark:text-primary-300 font-medium">
            üí° Want to create your own Hub? <span class="font-bold">Coming soon!</span> We're building tools for creators and communities.
          </p>
        </div>
      </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Hub Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allHubs.map((hub, index) => (
          <div class="animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
            <a href={`/hub/${hub.slug}`} class="group block">
              <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-slate-200 dark:border-slate-700 hover:border-primary-200 dark:hover:border-primary-600 transition-all duration-300 hover:shadow-xl hover:scale-105">
                <!-- Hub Icon -->
                <div class="w-16 h-16 mx-auto mb-6 rounded-2xl flex items-center justify-center text-4xl shadow-lg group-hover:scale-110 transition-transform duration-300" style={`background: linear-gradient(135deg, ${hub.color}20, ${hub.color}40); border: 2px solid ${hub.color}30`}>
                  {hub.icon}
                </div>
                
                <!-- Hub Info -->
                <div class="text-center">
                  <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                    {hub.name}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-400 mb-6 leading-relaxed">
                    {hub.description}
                  </p>
                  
                  <!-- Stats -->
                  <div class="flex items-center justify-center space-x-6 text-sm">
                    <div class="flex items-center space-x-1">
                      <span>üë•</span>
                      <span class="font-medium text-slate-700 dark:text-slate-300">
                        {hub.followerCount.toLocaleString()}
                      </span>
                    </div>
                    <div class="flex items-center space-x-1">
                      <span>üìù</span>
                      <span class="font-medium text-slate-700 dark:text-slate-300">
                        {hub.thredCount} threds
                      </span>
                    </div>
                  </div>
                  
                  <!-- Activity Indicator -->
                  <div class="mt-4 flex items-center justify-center">
                    <div class="flex items-center space-x-1 text-xs text-green-600 dark:text-green-400">
                      <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                      <span>Active community</span>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>

      <!-- Create Hub CTA -->
      <div class="mt-16 text-center">
        <div class="bg-gradient-to-r from-primary-600 to-primary-800 rounded-3xl p-8 lg:p-12 text-white">
          <h2 class="text-3xl font-bold mb-4">Want to Create Your Own Hub?</h2>
          <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
            We're building tools for creators, journalists, and communities to launch their own specialized hubs. 
            Be the first to know when it's ready.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="flex-1 px-4 py-3 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary-300"
            />
            <button class="px-6 py-3 bg-white text-primary-700 font-semibold rounded-xl hover:bg-primary-50 transition-colors duration-200">
              Get Notified
            </button>
          </div>
          <p class="text-sm text-primary-200 mt-4">
            Join the waitlist for Hub creation tools
          </p>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>