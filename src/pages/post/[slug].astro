---
import { format } from 'date-fns';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/PostCard.astro';
import { dummyPosts } from '../../lib/dummyData';

export async function getStaticPaths() {
  // Use dummy data for now - replace with Supabase query when ready
  const posts = dummyPosts;

  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;

// Find the post - replace with Supabase query when ready
const post = dummyPosts.find(p => p.slug === slug);

if (!post) {
  return Astro.redirect('/404');
}

// Get related posts - replace with Supabase query when ready
const relatedPosts = dummyPosts
  .filter(p => p.category_id === post.category_id && p.id !== post.id)
  .slice(0, 3);

const formattedDate = format(new Date(post.created_at), 'MMMM dd, yyyy');
const readingTime = Math.ceil(post.content.split(' ').length / 200);
---

<Layout 
  title={post.seo_title || `${post.title} - Threda`}
  description={post.seo_description || post.excerpt}
  ogImage={post.featured_image}
>
  <Header />
  
  <main class="min-h-screen">
    <!-- Article Header -->
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <header class="mb-12">
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-2 text-sm text-slate-500 dark:text-slate-400 mb-8">
          <a href="/" class="hover:text-luxury-600 dark:hover:text-luxury-400 transition-colors">Home</a>
          <span>/</span>
          {post.category && (
            <>
              <a 
                href={`/category/${post.category.slug}`} 
                class="hover:text-luxury-600 dark:hover:text-luxury-400 transition-colors"
              >
                {post.category.name}
              </a>
              <span>/</span>
            </>
          )}
          <span class="text-slate-400 dark:text-slate-500 truncate">{post.title}</span>
        </nav>

        {post.category && (
          <div class="mb-6">
            <a 
              href={`/category/${post.category.slug}`}
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium text-white hover:opacity-90 transition-opacity"
              style={`background-color: ${post.category.color}`}
            >
              {post.category.name}
            </a>
          </div>
        )}
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 dark:text-white mb-8 leading-tight">
          {post.title}
        </h1>
        
        <div class="flex flex-wrap items-center text-slate-600 dark:text-slate-400 gap-6 mb-8">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <time datetime={post.created_at} class="font-medium">{formattedDate}</time>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>{readingTime} min read</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <span>{post.view_count.toLocaleString()} views</span>
          </div>
          {post.trending_score > 50 && (
            <div class="flex items-center space-x-2 text-red-500 font-medium">
              <span>ðŸ”¥</span>
              <span>Trending</span>
            </div>
          )}
        </div>

        {post.featured_image && (
          <div class="mb-12">
            <img 
              src={post.featured_image} 
              alt={post.title}
              class="w-full h-96 lg:h-[500px] object-cover rounded-2xl shadow-2xl"
            />
          </div>
        )}
        
        <div class="text-xl text-slate-700 dark:text-slate-300 leading-relaxed mb-12 font-medium border-l-4 border-luxury-500 pl-6 bg-luxury-50 dark:bg-luxury-900/20 py-6 rounded-r-lg">
          {post.excerpt}
        </div>
      </header>

      <!-- Article Content -->
      <div class="prose prose-lg prose-slate dark:prose-invert max-w-none">
        <div set:html={post.content}></div>
      </div>

      <!-- Article Footer -->
      <footer class="border-t border-cream-200 dark:border-slate-700 pt-12 mt-16">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6">
          <div class="flex items-center space-x-4">
            <span class="text-slate-600 dark:text-slate-400 font-medium">Share this article:</span>
            <div class="flex space-x-3">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors duration-200"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </a>
              <a 
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 bg-blue-700 hover:bg-blue-800 text-white rounded-lg transition-colors duration-200"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>
          
          <div class="text-sm text-slate-500 dark:text-slate-400">
            Last updated: {format(new Date(post.updated_at), 'MMM dd, yyyy')}
          </div>
        </div>
      </footer>
    </article>

    <!-- Related Posts -->
    {relatedPosts && relatedPosts.length > 0 && (
      <section class="bg-cream-100 dark:bg-slate-800 py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 dark:text-white mb-4">Related Articles</h2>
            <p class="text-slate-600 dark:text-slate-400">Continue exploring similar topics</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedPosts.map((relatedPost, index) => (
              <div class="animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
                <PostCard post={relatedPost} />
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  .prose {
    color: theme('colors.slate.700');
  }
  
  .dark .prose {
    color: theme('colors.slate.300');
  }
  
  .prose h2, .prose h3, .prose h4 {
    color: theme('colors.slate.900');
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
  }
  
  .dark .prose h2, .dark .prose h3, .dark .prose h4 {
    color: theme('colors.white');
  }
  
  .prose p {
    margin-bottom: 1.75rem;
    line-height: 1.8;
  }
  
  .prose img {
    border-radius: 1rem;
    margin: 2.5rem 0;
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  }
  
  .prose a {
    color: theme('colors.luxury.600');
    text-decoration: underline;
    text-decoration-color: theme('colors.luxury.300');
    text-underline-offset: 4px;
    transition: all 0.2s;
  }
  
  .prose a:hover {
    color: theme('colors.luxury.700');
    text-decoration-color: theme('colors.luxury.500');
  }
  
  .dark .prose a {
    color: theme('colors.luxury.400');
    text-decoration-color: theme('colors.luxury.600');
  }
  
  .dark .prose a:hover {
    color: theme('colors.luxury.300');
    text-decoration-color: theme('colors.luxury.400');
  }
</style>